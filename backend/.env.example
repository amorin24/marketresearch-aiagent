# API Keys (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-goes-here  # REQUIRED for all AI framework operations
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-goes-here  # REQUIRED for stock price retrieval

# OpenAI API Retry Configuration
OPENAI_MAX_RETRIES=3  # Number of retry attempts for OpenAI API calls
OPENAI_INITIAL_RETRY_DELAY=1000  # Initial delay in ms between retries (exponential backoff applied)

# Framework Configuration (REQUIRED)
CREWAI_ENABLED=true  # Enable/disable CrewAI framework
SQUIDAI_ENABLED=true  # Enable/disable SquidAI framework
LETTAAI_ENABLED=true  # Enable/disable LettaAI framework
AUTOGEN_ENABLED=true  # Enable/disable AutoGen framework
LANGGRAPH_ENABLED=true  # Enable/disable LangGraph framework

# Data Source Configuration
ENABLE_CRUNCHBASE=true  # Enable Crunchbase as a data source
ENABLE_TECHCRUNCH=true  # Enable TechCrunch as a data source
ENABLE_LINKEDIN=true  # Enable LinkedIn as a data source
ENABLE_ANGELLIST=true  # Enable AngelList as a data source
ENABLE_NEWS=true  # Enable news websites as a data source

# Server Configuration (REQUIRED)
PORT=8080  # Port for the API server
NODE_ENV=development  # Environment (development, production, test)

# Security Settings (REQUIRED for production)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173  # Comma-separated list of allowed origins

# Email Configuration (Optional)
EMAIL_ENABLED=false  # Set to true to enable email notifications
EMAIL_HOST=smtp.example.com  # SMTP server host
EMAIL_PORT=587  # SMTP server port
EMAIL_SECURE=false  # Use TLS
EMAIL_USER=user@example.com  # SMTP username
EMAIL_PASS=password  # SMTP password
EMAIL_FROM=noreply@example.com  # From address for sent emails
